<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Styl1">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:textColor">#765676</item>
        <item name="android:background">#901021</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Styl2" parent="Styl1">
        <item name="android:textColor">#522552</item>
        <item name="android:background">#187187</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
